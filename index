<!-- Swiper JS -->
<script src="https://unpkg.com/swiper@9/swiper-bundle.min.js"></script>
<script>
(function(){
  // Burger toggle with animated panel
  const burger = document.querySelector('.burger');
  const panel = document.getElementById('primary-nav');
  function closeOnResize(){
    if (window.matchMedia('(min-width: 861px)').matches){
      panel.classList.remove('open');
      burger.setAttribute('aria-expanded','false');
    }
  }
  burger.addEventListener('click', () => {
    const expanded = burger.getAttribute('aria-expanded') === 'true';
    burger.setAttribute('aria-expanded', String(!expanded));
    panel.classList.toggle('open');
  });
  window.addEventListener('resize', closeOnResize);

  // Swipers
  function makeSwiper(selector){
    return new Swiper(selector, {
      effect: 'coverflow',
      grabCursor: true,
      centeredSlides: true,
      coverflowEffect: { rotate: 0, stretch: 0, depth: 100, modifier: 3, slideShadows: true },
      keyboard: { enabled: true },
      loop: false,
      pagination: { el: selector + ' .swiper-pagination', clickable: true },
      breakpoints: {
        0:    { slidesPerView: 1, centeredSlides: false, spaceBetween: 14 },
        480:  { slidesPerView: 1.05, centeredSlides: false, spaceBetween: 16 },
        640:  { slidesPerView: 1.2, centeredSlides: true, spaceBetween: 18 },
        900:  { slidesPerView: 2, centeredSlides: true, spaceBetween: 18 },
        1200: { slidesPerView: 'auto', centeredSlides: true, spaceBetween: 20 }
      }
    });
  }
  makeSwiper(".visual-swiper");
  makeSwiper(".media-swiper");
  makeSwiper(".events-swiper");
  makeSwiper(".skin-swiper");

  // Lightbox
// Lightbox
  const lb = document.getElementById('lightbox');
  const lbImg = document.getElementById('lightbox-img');
  const lbClose = lb.querySelector('.close');

  function getBgURL(el){
    const s = getComputedStyle(el);
    const m = s.backgroundImage.match(/url\(["']?(.*?)["']?\)/);
    return m ? m[1] : null;
  }

  document.querySelectorAll('.swiper-slide.slide-bg').forEach(slide => {
    slide.addEventListener('click', (e) => {
      // Avoid triggering when clicking a link inside the slide
      if (e.target && (e.target.closest('a') || e.target.tagName === 'A')) return;
      const url = getBgURL(slide);
      if(!url) return;
      lbImg.src = url;
      lb.classList.add('open');
      lb.setAttribute('aria-hidden', 'false');
      lbImg.style.transform = 'scale(1)';
    });
  });

    // Tap to zoom
  let __zoomed = false;
  lbImg.addEventListener('click', () => {
    __zoomed = !__zoomed;
    lbImg.style.transform = __zoomed ? 'scale(1.8)' : 'scale(1)';
  });
  // Reset zoom on close
  function __closeLightbox(){
    lb.classList.remove('open');
    lb.setAttribute('aria-hidden', 'true');
    __zoomed = false;
    lbImg.style.transform = 'scale(1)';
  }
  lbClose.addEventListener('click', __closeLightbox);
  lb.addEventListener('click', (e) => { if (e.target === lb) __closeLightbox(); });
  document.addEventListener('keydown', (e) => { if (e.key === 'Escape' && lb.classList.contains('open')) __closeLightbox(); });


})();
</script>

<div class="lightbox" id="lightbox" aria-hidden="true">
  <button class="close" aria-label="Закрыть">Закрыть</button>
  <img id="lightbox-img" alt="Просмотр изображения"/>
  <div class="zoom-tip">Нажмите для увеличения/уменьшения</div>
</div>

</body>
</html>

